<UserControl x:Class="DocViewer.Controls.ImgControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocViewer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:PanelControlPageViewModel x:Key="ABC" />
    </UserControl.Resources>

    <Grid>
        <StackPanel Grid.Row="0" HorizontalAlignment="Stretch" Background="Aqua">
            <Image x:Name="ImageShow" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
            <Label x:Name="lblCounter"  Content="{Binding  Path=MainCounter2}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"></Label>
            <TextBox x:Name="txtBoxID" Text="{Binding Path=MainCounter2}" TextAlignment="Left" FontSize="40" Height="53" TextWrapping="Wrap" Width="200" />
        </StackPanel>

    </Grid>
</UserControl>
